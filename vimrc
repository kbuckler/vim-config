set nocompatible
syntax enable
set encoding=utf-8
set showcmd

filetype on
filetype indent on
filetype plugin on

set nowrap
set tabstop=2 shiftwidth=2
set expandtab
set backspace=indent,eol,start

set hlsearch
set incsearch
set ignorecase
set smartcase

call pathogen#infect()

let g:CommandTMaxHeight=20
